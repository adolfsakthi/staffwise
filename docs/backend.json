{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores public profile information for a user.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "property_code": {
          "type": "string",
          "description": "The property code the user belongs to."
        },
        "role": {
          "type": "string",
          "description": "The user's role (e.g., 'Admin', 'Manager')."
        }
      },
      "required": ["uid", "email", "property_code", "role"]
    },
    "AttendanceRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AttendanceRecord",
      "type": "object",
      "description": "Stores all employee attendance entries.",
      "properties": {
        "employee_name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "department": { "type": "string" },
        "property_code": { "type": "string" },
        "shift_start": { "type": "string" },
        "shift_end": { "type": "string" },
        "entry_time": { "type": "string" },
        "exit_time": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "is_late": { "type": "boolean" },
        "late_by_minutes": { "type": "number" },
        "overtime_minutes": { "type": "number" },
        "is_audited": { "type": "boolean" },
        "audit_notes": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": [
        "employee_name", "email", "department", "property_code",
        "shift_start", "shift_end", "entry_time", "exit_time",
        "date", "is_late", "late_by_minutes", "overtime_minutes",
        "is_audited"
      ]
    },
    "EmailLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "EmailLog",
      "type": "object",
      "description": "Logs email notifications.",
      "properties": {
        "to": { "type": "string" },
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "emailType": { "type": "string" },
        "sentAt": { "type": "string", "format": "date-time" }
      },
      "required": ["to", "subject", "body", "emailType", "sentAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/entities/UserProfile" },
          "description": "Stores public user profile data."
        }
      },
      {
        "path": "/attendance_records/{recordId}",
        "definition": {
          "entityName": "AttendanceRecord",
          "schema": { "$ref": "#/entities/AttendanceRecord" },
          "description": "Stores all attendance records."
        }
      },
      {
        "path": "/email_logs/{logId}",
        "definition": {
          "entityName": "EmailLog",
          "schema": { "$ref": "#/entities/EmailLog" },
          "description": "Logs all email notifications."
        }
      }
    ]
  }
}
